{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"noEmit": true,
		"paths": {
			"*": [
				"./*"
			],
			"edge-pi": [
				"./packages/edge-pi/src/index.ts"
			],
			"edge-pi/vercel-sandbox": [
				"./packages/edge-pi/src/vercel-sandbox.ts"
			],
			"edge-pi/*": [
				"./packages/edge-pi/src/*"
			],
			"edge-pi-cli": [
				"./packages/edge-pi-cli/src/main.ts"
			],
			"edge-pi-cli/*": [
				"./packages/edge-pi-cli/src/*"
			],
		}
	},
	"include": [
		"packages/*/src/**/*",
		"packages/*/test/**/*",
		"examples/**/*"
	],
	"exclude": [
		"**/dist/**"
	]
}
