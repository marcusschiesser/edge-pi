{
	"name": "edge-pi-cli",
	"version": "0.1.3",
	"description": "CLI for the edge-pi coding agent SDK",
	"type": "module",
	"bin": {
		"epi": "dist/cli.js"
	},
	"main": "./dist/main.js",
	"types": "./dist/main.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsgo -p tsconfig.build.json && shx chmod +x dist/cli.js",
		"clean": "shx rm -rf dist",
		"dev": "tsgo -p tsconfig.build.json --watch --preserveWatchOutput",
		"test": "vitest --run"
	},
	"dependencies": {
		"@ai-sdk/anthropic": "^3.0.36",
		"@ai-sdk/google": "^3.0.21",
		"@ai-sdk/openai": "^3.0.26",
		"@mariozechner/pi-tui": "^0.50.9",
		"chalk": "^5.5.0",
		"edge-pi": "^0.1.3",
		"proper-lockfile": "^4.1.2",
		"yaml": "^2.7.1"
	},
	"devDependencies": {
		"@types/node": "^24.3.0",
		"@types/proper-lockfile": "^4.1.4",
		"shx": "^0.4.0",
		"vitest": "^4.0.18"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
