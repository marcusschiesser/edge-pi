{
	"name": "@mariozechner/pi-coding-agent",
	"version": "0.51.0",
	"description": "Coding agent CLI with interactive, RPC, and prompt modes",
	"type": "module",
	"piConfig": {
		"name": "pi",
		"configDir": ".pi"
	},
	"bin": {
		"pi": "dist/cli.js"
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"docs",
		"examples",
		"CHANGELOG.md"
	],
	"scripts": {
		"clean": "shx rm -rf dist",
		"dev": "tsgo -p tsconfig.build.json --watch --preserveWatchOutput",
		"build": "tsgo -p tsconfig.build.json && shx chmod +x dist/cli.js",
		"build:binary": "npm run build && bun build --compile ./dist/cli.js --outfile dist/pi && npm run copy-binary-assets",
		"copy-binary-assets": "shx cp package.json dist/ && shx cp README.md dist/ && shx cp CHANGELOG.md dist/ && shx cp -r docs dist/ && shx cp -r examples dist/ && shx cp ../../node_modules/@silvia-odwyer/photon-node/photon_rs_bg.wasm dist/",
		"test": "vitest --run",
		"generate-models": "npx tsx scripts/generate-models.ts",
		"prepublishOnly": "npm run clean && npm run build"
	},
	"dependencies": {
		"@mariozechner/pi-coding-agent-sdk": "^0.51.0",
		"@mariozechner/pi-env": "^0.50.8",
		"@mariozechner/pi-tui": "^0.50.7",
		"chalk": "^5.5.0",
		"cli-highlight": "^2.1.11",
		"diff": "^8.0.2"
	},
	"optionalDependencies": {
		"@mariozechner/clipboard": "^0.3.2"
	},
	"devDependencies": {
		"@types/diff": "^7.0.2",
		"@types/node": "^24.3.0",
		"shx": "^0.4.0",
		"typescript": "^5.7.3",
		"vitest": "^3.2.4"
	},
	"keywords": [
		"coding-agent",
		"ai",
		"llm",
		"cli",
		"tui",
		"agent"
	],
	"author": "Mario Zechner",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/badlogic/pi-mono.git",
		"directory": "packages/coding-agent"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
