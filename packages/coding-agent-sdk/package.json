{
	"name": "@mariozechner/pi-coding-agent-sdk",
	"version": "0.51.0",
	"description": "Coding agent SDK with tools, extensions, session management, and model registry",
	"type": "module",
	"piConfig": {
		"name": "pi",
		"configDir": ".pi"
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./*": {
			"types": "./dist/*",
			"import": "./dist/*"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"clean": "shx rm -rf dist",
		"dev": "tsgo -p tsconfig.build.json --watch --preserveWatchOutput",
		"build": "tsgo -p tsconfig.build.json && npm run copy-assets",
		"copy-assets": "shx mkdir -p dist/modes/interactive/theme && shx cp src/modes/interactive/theme/*.json dist/modes/interactive/theme/ && shx mkdir -p dist/core/export-html/vendor && shx cp src/core/export-html/template.html src/core/export-html/template.css src/core/export-html/template.js dist/core/export-html/ && shx cp src/core/export-html/vendor/*.js dist/core/export-html/vendor/",
		"test": "vitest --run",
		"prepublishOnly": "npm run clean && npm run build"
	},
	"dependencies": {
		"@ai-sdk/amazon-bedrock": "^4.0.48",
		"@ai-sdk/anthropic": "^3.0.36",
		"@ai-sdk/azure": "^3.0.26",
		"@ai-sdk/google": "^3.0.21",
		"@ai-sdk/google-vertex": "^4.0.43",
		"@ai-sdk/openai": "^3.0.25",
		"@mariozechner/jiti": "^2.6.2",
		"@mariozechner/pi-env": "^0.50.8",
		"@mariozechner/pi-tui": "^0.50.7",
		"@silvia-odwyer/photon-node": "^0.3.4",
		"ai": "^6.0.71",
		"chalk": "^5.5.0",
		"cli-highlight": "^2.1.11",
		"diff": "^8.0.2",
		"file-type": "^21.1.1",
		"glob": "^11.0.3",
		"ignore": "^7.0.5",
		"marked": "^15.0.12",
		"minimatch": "^10.1.1",
		"proper-lockfile": "^4.1.2",
		"yaml": "^2.8.2",
		"zod": "^4.1.8"
	},
	"devDependencies": {
		"@types/diff": "^7.0.2",
		"@types/node": "^24.3.0",
		"@types/proper-lockfile": "^4.1.4",
		"shx": "^0.4.0",
		"typescript": "^5.7.3",
		"vitest": "^3.2.4"
	},
	"keywords": [
		"coding-agent",
		"ai",
		"llm",
		"sdk",
		"agent"
	],
	"author": "Mario Zechner",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/badlogic/pi-mono.git",
		"directory": "packages/coding-agent-sdk"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
