{
	"name": "edge-pi-mono",
	"private": true,
	"type": "module",
	"workspaces": [
		"packages/*",
		"examples",
		"docs"
	],
	"scripts": {
		"clean": "npm run clean --workspaces",
		"build": "cd packages/edge-pi && npm run build && cd ../edge-pi-cli && npm run build",
		"check": "biome check --write --error-on-warnings . && tsgo --noEmit",
		"test": "npm run test --workspaces --if-present",
		"prepublishOnly": "npm run clean && npm run build && npm run check",
		"publish": "npm run prepublishOnly && npm publish -ws --access public",
		"publish:dry": "npm run prepublishOnly && npm publish -ws --access public --dry-run",
		"changeset": "changeset",
		"version": "changeset version",
			"release": "npm run build && changeset publish",
		"prepare": "husky"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.5",
		"@changesets/cli": "^2.29.7",
		"@changesets/changelog-github": "^0.5.1",
		"@types/node": "^22.10.5",
		"@typescript/native-preview": "7.0.0-dev.20260120.1",
		"husky": "^9.1.7",
		"tsx": "^4.20.3",
		"typescript": "^5.9.2"
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"version": "0.0.3",
	"dependencies": {},
	"overrides": {
		"fast-xml-parser": "5.3.4"
	}
}
